include partials/header
doctype html
html
    head
        +head
    body
        +menu
        .container
            .row
                h1(style="text-align: center") Create a new Campground
                div(style="width: 40%; margin: 25px auto;")
                    form(action="/campgrounds" method="POST")
                        .form-group
                            input.form-control(type="text" name="name" placeholder="Name")
                        .form-group
                            input.form-control(type="text" name="image" placeholder="Image URL")
                        .form-group
                            textarea.form-control(name="description" rows="10" placeholder="Description")
                        .form-group
                            button.btn.btn-lg.btn-primary.btn-block Submit!

                    a(href="/campgrounds") Go Back
