include partials/header
doctype html
html
    head
        +head
    body
        +menu
        .container
            .row
                h1(style="text-align: center") Create a new Campground
                div(style="width: 40%; margin: 25px auto;")
                    form(action="/campgrounds/" + campground._id + "?_method=PUT" method="POST")
                        .form-group
                            input.form-control(type="text" name="camp[name]" placeholder="Name" value=campground.name)
                        .form-group
                            input.form-control(type="text" name="camp[image]" placeholder="Image URL" value=campground.image)
                        .form-group
                            textarea.form-control(name="camp[description]" rows="10" placeholder="Description")= campground.description
                        .form-group
                            button.btn.btn-lg.btn-primary.btn-block Edit

                    a(href="/campgrounds" + campground._id) Go Back
