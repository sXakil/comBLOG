include ../partials/header
doctype html
html
    head
        +head('Edit Blog')
    body
        +menu
        .container
            .row
                +flashMessage
                h1(style="text-align: center") Edit Blog
                div(style="width: 40%; margin: 25px auto;")
                    form(action="/blogs/" + blog._id + "?_method=PUT" method="POST")
                        .form-group
                            input.form-control(type="text" name="blog[title]" placeholder="Name" value=blog.title)
                        .form-group
                            input.form-control(type="text" name="blog[image]" placeholder="Image URL" value=blog.image)
                        .form-group
                            textarea.form-control(name="blog[blog]" rows="10" placeholder="Description")= blog.blog
                        .form-group
                            button.btn.btn-lg.btn-primary.btn-block Edit

                    a(href="/blogs/" + blog._id)
                        i.fas.fa-arrow-left
                        |  Go Back
